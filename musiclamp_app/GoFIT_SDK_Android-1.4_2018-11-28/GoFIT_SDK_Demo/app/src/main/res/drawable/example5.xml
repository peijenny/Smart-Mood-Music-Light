<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->
            <gradient
                android:startColor="#00C0C0C0"
                android:centerColor="#00C0C0C0"
                android:endColor="#00C0C0C0"
                android:angle="270" />

            <!--邊框顏色、粗細-->
            <stroke
                android:width="2dp"
                android:color="#707070" />

            <!--圓角-->
            <corners android:radius="20dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>